<%= form_with model: @school_lunch, local: true do |f|%>
  <div class="field">
    <%= f.label :manufacturer, "メーカー名", class: :form_name %><br />
    <%= f.text_field :manufacturer, class: :form_text, id:"item_manufacturer" %>
  </div>

  <div class="field">
    <%= f.label :lunch_item_name, "商品名", class: :form_name %><br />
    <%= f.text_area :lunch_item_name, class: :form_text, id:"new_item_name" %>
  </div>
  <div class="field">
    <%= f.label :image, "新商品の画像", class: :form_name %><br />
    <%= f.file_field :image, id:"item_image", class: :form_name %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :send, class: :form_name  %>
  </div>
<% end %>