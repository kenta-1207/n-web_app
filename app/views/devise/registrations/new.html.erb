<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>
  
  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name, class:"input-default", id:"user_name", placeholder:"山田勉" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前かな（全角ひらがな）</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name_ruby, class:"input-default", id:"user_position", placeholder:"やまだつとむ" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">所属</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :occupation, class:"input-default", id:"user_occupation", placeholder:"店名、学校名等" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">立場</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :position, class:"input-default", id:"user_position", placeholder:"料理長、栄養士等" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">閲覧範囲</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:page_select_id, PageSelect.all, :id, :name, {class:"input-default", id:"user_page_select"}) %>
  </div>

  <div class="form-group">
    <h2 class='form-bottom-text'>
      「会員登録」のボタンを押すことにより、
      <span>利用規約</span>
      <br>に同意したものとみなします
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
<% end %>

<%= render "shared/second-footer"%>